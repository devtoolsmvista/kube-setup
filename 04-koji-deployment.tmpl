kind: Deployment
apiVersion: apps/v1
metadata:
  name: koji-hub
  labels:
    app: koji
spec:
  replicas: 1
  selector:
    matchLabels:
      app: koji
  template:
    metadata:
      labels:
        app: koji
    spec:
      hostAliases:
      - ip: ${GIT_HOST_IP}
        hostnames:
        - gitcentos.mvista.com
      - ip: ${MIRROR_HOST_IP}
        hostnames:
        - centos6mirror.mvista.com
        - centos7mirror.mvista.com
        - centos8mirror.mvista.com
      - ip: ${COLLECTIVE_HOST_IP}
        hostnames:
        - centos7collective.mvista.com
      containers:
        - name: koji-db
          image: postgres:9.4
          ports:
            - name: postgres-port
              containerPort: 5432
          envFrom:
          - configMapRef:
              name: postgres-config
          volumeMounts:
          - mountPath: /var/lib/postgresql/data
            name: postgredb
        - name: koji-hub
          image: yufenkuo/koji-hub
          ports:
            - name: http-port
              containerPort: 80
              protocol: TCP
            - name: https-port
              containerPort: 443
              protocol: TCP
          envFrom:
          - configMapRef:
              name: kojihub-config
          env:
          - name: KOJIHUB_INGRESS_HOSTNAME
            value: ${KOJIHUB_INGRESS_HOSTNAME}
          - name: ADDITIONAL_SAN
            value: ${KOJIHUB_INGRESS_HOSTNAME}
          - name: ADDITIONAL_SAN_IP
            value: ${HOST_IP}
          - name: KOJI_DB
            valueFrom:
              fieldRef:
                fieldPath: status.podIP
          - name: KOJI_HUB_IP
            valueFrom:
              fieldRef:
                fieldPath: status.podIP
          volumeMounts:
          - mountPath: /srv
            name: kojihub-srv
          - mountPath: /config
            name: kojihub-config
          - mountPath: /root/saved/etc/pki/koji
            name: kojihub-savedetc
      volumes:
      - name: postgredb
        persistentVolumeClaim:
           claimName: postgres-pv-claim
      - name: kojihub-srv
        persistentVolumeClaim:
           claimName: kojihubsrv-pv-claim
      - name: kojihub-config
        persistentVolumeClaim:
           claimName: kojihubconfig-pv-claim
      - name: kojihub-savedetc
        persistentVolumeClaim:
           claimName: kojihubsavedetc-pv-claim
      - name: runscripts
        hostPath:
           path: /koji/koji-setup/koji-jenkins-setup/run-scripts2
           type: Directory
      - name: builds
        hostPath:
           path: /builds/centos7/release/centos-7.6
           type: Directory

      restartPolicy: Always
